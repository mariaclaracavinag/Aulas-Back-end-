<main> 
 <h2> Cadastro de nova disciplinas</h2>

<form action="/disciplinas/novo" method="post" class="form"> 
     <div class="form-group">
        <label> nome da disciplinas: </label>
        <input type="text" name="nome_disciplina" required> 
     </div>
     <div class="form-group">
        <label> professores: </label>
      <select name = "id_professor" required> 
        <option value =" "> selecione o professor</option>
        <!----gerando a lista de professores cadastrados--->  
        <% for (let professor of dadosProfessores) { %> 
             <option value = " <%= professor.id_professor%>" > <%= professor.nome_professor %> </option>
        <% } %> 
      </select>
     </div>
     <button type = "submit" class="btn btn-principal"> adicionar</button>
     <a href="/disciplina/listar" class="btn btn-secundario"> Cancelar</a>
</form>

</main>

