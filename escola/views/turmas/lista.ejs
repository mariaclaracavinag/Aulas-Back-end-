  <main> 
    <h2>Lista de Turmas</h2> 
<a href="/turmas/novo " class="btn btn-principal"> adicionar turma</a>
<a href="/turmas/novo " class="btn_flutuante">+ </a>

<!---CEIANDO FORM DE PESQUISA E ORDENAÇÃO---->
 <form action="/turmas/listar" method ="GET" class=" form form-consulta"> 
  <input type = "text" name = "busca" placeholder = "buscar por nome ou formação"> 
  <button typw="submit" class = "btn btn-principal"> buscar </button>
 </form>
    <table class="dados-table"> 
         <thead> 
            <tr> 
                <th> nome</th>
                <th> ações</th>
            </tr>
         </thead>
      <tbody>
       <% for (let turma of dadosTurmas) { %>
        <tr> 
            <td> <%= turma.nome_turma %></td>
            <td class="acoes"> 
               <a href="/turmas/Editar/<%= turma.id_turma%>"class="btn btn-edit"> Editar</a>
                <form action="/turmas/Excluir/<%= turma.id_turma %>" method="POST"> 
                  <button type="submit" class="btn btn-delete">Excluir</button>
               </form>
            </td>
        </tr>
         <%  } %> 
      </tbody>
  </table> 
  <div class="paginacao">
         <% if (pgAtual > 1) { %> 
           <a href="/turmas/listar?pg=<%= pgAtual -1 %>" class=" btn btn-principal"> Anterior</a>
        <% } %>
        
         <span> Pàgina <%= pgAtual %> de <%= totalPgs %> </span>

         <% if (pgAtual < totalPgs) { %> 
           <a href="/turmas/listar?pg=<%= pgAtual +1 %>"class=" btn btn-principal"> Proxima</a>
        <% } %>
      </div>
  </main>



